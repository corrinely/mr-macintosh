{
  "name": "Mr. Macintosh",
  "description": "Mr. Macintosh lives.",
  "version": "1.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
        "matches": ["*://*/*"],
        "js":         ["content.js"],
        "run_at":     "document_start"
    }
  ],
  "manifest_version": 2
}
